@model GroupProjectRestaurangMVC01.ViewModels.ReservationViewModel
@{
    ViewBag.Title = "FirstCreate";
}

<h2>FirstCreate</h2>

@using (Html.BeginForm("FirstCreate","Reservation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group col-md-7">
        <h4>Step 1: Enter ammount of people in party and date for the reservation</h4>
    </div>

    <div class="col-md-9">
            @Model.Result

    </div>
    
    <div class="form-group col-md-7">
        @Html.LabelFor(c => c.TotalGuests, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(c => c.TotalGuests, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.TotalGuests)
        </div>
    </div>

    <div class="form-group col-md-7">
        @Html.LabelFor(c => c.Date, new { @class = "col-md-3 control-label" })
        <div>
            @Html.TextBoxFor(c => c.Date, new {id = "date"})
            @Html.ValidationMessageFor(c => c.Date)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="BtnNext" value="Next" class="btn btn-default" />
        </div>
    </div>

    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="btn btn-info" />
        </div>
    </div>*@
}




<script type="text/javascript">
    $(document).ready(function () {
        $("#date").datepicker({ dateFormat: 'yy/mm/dd' });
    });
</script>

<style>    
    #ui-datepicker-div {background-color: #fff !important;}
</style>
