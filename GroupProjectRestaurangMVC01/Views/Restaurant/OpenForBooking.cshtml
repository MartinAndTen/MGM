@model GroupProjectRestaurangMVC01.ViewModels.RestaurantViewModel

@{
    ViewBag.Title = "OpenForBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Opening hours</h2>
<div class="col-md-12">
    @if (Model.Restaurant.OpenForBookings.Count <= 0)
    {
        <strong><small>You dont have any open bookings</small></strong>
    }
    else
    {
        <div class="row"></div>
        <div class="col-md-12">
            <table class="table table-hover">
                @foreach (var openForBooking in Model.Restaurant.ClosedForBookings)
                {
                    <tr>
                        <td>
                            <strong><small>@openForBooking.Day</small></strong>
                        </td>
                        <td>
                            <strong><small>@openForBooking.StartTime - @openForBooking.EndTime</small></strong>
                        </td>
                        <td><strong><small>@Html.ActionLink("Delete", "DeleteBooking", "Restaurant", new { id = openForBooking.Id, bookingType = "OpenBooking" }, new { onclick = "return confirm('Are you sure you wish to delete this opening time?');" })</small></strong></td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Add Opening hours</h3>
        @using (Html.BeginForm("OpenForBooking", "Restaurant", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="col-md-7">
                <div class="form-group">
                    @Html.LabelFor(c => c.WeekDay, new { @class = "control-label" })
                    @Html.EnumDropDownListFor(c => c.WeekDay, new { @class = "form-control  " })
                    @Html.ValidationMessageFor(c => c.WeekDay)
                </div>
                @*<div class="input-group bootstrap-timepicker">
                    <input id="timepicker" type="text" class="input-group-sm timepicker">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-time"></i>
                    </span>
                </div>*@

                <div class="form-group">
                    @Html.LabelFor(c => c.StartTime, new { @class = "control-label" })
                    <div class='input-group date' id='datetimepicker4'>
                        @Html.TextBoxFor(c => c.StartTime, new { @class = "form-control timepicker" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(c => c.StartTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.EndTime, new { @class = "control-label" })
                    <div class='input-group bootstrap-timepicker' id='datetimepicker4'>
                        @Html.TextBoxFor(c => c.EndTime, new { @class = "form-control timepicker" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(c => c.EndTime)
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-info col-md-12" />
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.timepicker').timepicker({
            minuteStep: 30,
            showSeconds: false,
            showMeridian: false
    });
    });
</script>