@model GroupProjectRestaurangMVC01.ViewModels.RestaurantViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(Model.Restaurant != null)
{ 
    @Model.Restaurant.Name
}
else
{
    foreach (var restaurant in Model.Restaurants)
    {
        <div class="col-md-6"><strong>@Html.ActionLink(@restaurant.Name,"Index", "Restaurant", new {id = restaurant.Id})</strong>
            <div class="row" >
                <div class="col-md-6">
                    <img src="~/Assets/Images/800px-No_Image_Wide.png" class="RestaurantImage" />
                </div>
                <div class="col-md-6 text-left" >
                    <small>@restaurant.Description</small>
                </div>
            </div>
            <div class="row">
                
                <div class="col-md-5">
                    <table id="restaurantTable">
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td>@restaurant.Email</td>
                        </tr>
                        <tr>
                            <td><strong>Phone:</strong></td>
                            <td>@restaurant.Phone</td>
                        </tr>
                        <tr>
                            <td><strong>City:</strong></td>
                            <td>@restaurant.City</td>
                        </tr>
                        <tr>
                            <td><strong>Address:</strong></td>
                            <td>@restaurant.Address</td>
                        </tr>
                        <tr>
                            <td><strong>ZipCode:</strong></td>
                            <td>@restaurant.Zipcode</td>
                        </tr>
                    </table>
                   
                    
                    
                </div>
            </div>
        </div>

    }
}

