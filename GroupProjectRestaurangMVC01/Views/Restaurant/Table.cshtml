@using GroupProjectRestaurangMVC01.Models
@model GroupProjectRestaurangMVC01.ViewModels.TableViewModel

@{
    ViewBag.Title = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Table's</h2>
<h3>@Model.Restaurant.Name</h3>
<div class="col-md-12">
    @using (Html.BeginForm("AddTable", "Restaurant", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="col-md-7">
            <div class="form-group">
                @Html.LabelFor(c => c.TableName, new { @class = "control-label" })
                @Html.TextBoxFor(c => c.TableName, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.TableName)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Seats, new { @class = "control-label" })
                @Html.TextBoxFor(c => c.Seats, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Seats)
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-info col-md-12" />
            </div>
        </div>
    }
</div>
<div class="row"></div>
<div class="col-md-7">
    <h2>Current Table's</h2>
    
    <table class="table table-striped table-responsive table-condensed">
        <tr>
            <th>Name/Nr</th>
            <th>Seats</th>
            <th>Edit/Delete</th>
        </tr>
        @foreach (var table in Model.Restaurant.Tables)
        {
            <tr>
                <td class="col-lg-4">
                    @table.TableName
                </td>
                <td class="col-lg-4">
                    @table.Seats
                </td>
                <td class="col-lg-4">
                    @Html.ActionLink("Edit", "EditTable", "Restaurant", new { id = table.Id }, null)/
                    @Html.ActionLink("Delete", "DeleteTable", "Restaurant", new { id = table.Id }, new { onclick = "return confirm('Are you sure you wish to delete this table?');" })
                </td>
        </tr>
        }
    </table>
</div>